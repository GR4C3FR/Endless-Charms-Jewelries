  <main class="container" style="padding-top:140px;">
    <h1>Checkout</h1>
    <hr>
    <div id="delivery-summary" style="display:none;margin-bottom:18px;"></div>

    <div style="display:grid;grid-template-columns:1fr 420px;gap:40px;margin-top:30px;">
      <section>
        <h3>Delivery</h3>
        <form id="checkout-form" class="contact-form checkout-form">
          <input type="text" id="country" name="country" placeholder="Country/Region" class="form-input">
          <div class="form-row">
            <input type="text" id="firstName" name="firstName" placeholder="First Name" class="form-input">
            <input type="text" id="lastName" name="lastName" placeholder="Last Name" class="form-input">
          </div>
          <input type="text" id="address" name="address" placeholder="Address" class="form-input">
          <div class="form-row">
            <input type="text" id="postal" name="postal" placeholder="Postal Code" class="form-input">
            <input type="text" id="province" name="province" placeholder="Province" class="form-input">
          </div>
          <input type="text" id="social" name="social" placeholder="Instagram/Facebook Handle (Optional)" class="form-input">
          <input type="text" id="phone" name="phone" placeholder="Phone Number" class="form-input">

          <div style="margin-top:18px;">
            <div style="display:flex;gap:12px;align-items:center;">
              <button id="save-profile" type="button" class="send-btn save-white">Save & Continue</button>
              <button id="clear-form-btn" type="button" class="send-btn clear-form">Clear Form</button>
            </div>
          </div>
        </form>
      </section>

      <aside>
        <h3>Payment</h3>
        <div style="margin-top:12px;">
          <label style="display:block;margin-bottom:10px;"><input type="radio" name="payment" value="bank-deposit"> Bank Deposit</label>
          <label style="display:block;margin-bottom:10px;"><input type="radio" name="payment" value="bank-transfer"> Bank Transfer</label>
          <label style="display:block;margin-bottom:10px;"><input type="radio" name="payment" value="qr-code"> QR Code</label>
        </div>

        <div id="payment-details" style="margin-top:12px;display:block;"></div>

        <div style="margin-top:30px;">
          <div class="checkout-items-box">
            <div id="checkout-items" style="margin-top:8px;">
              <div class="subtotal-text">*Items shown here</div>
            </div>
          </div>
          <div id="checkout-summary"></div>
          <div style="margin-top:18px;">
            <button id="complete-order" class="checkout-btn" disabled>Complete Order</button>
          </div>
        </div>
      </aside>
    </div>

  </main>

