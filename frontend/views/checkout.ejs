</head>
<body>
    <!-- Navigation Header (copied from home) -->
    <header class="main-header">
      <div class="container">
        <nav class="navbar">
          <a href="/" class="logo">
            <img src="/images/navigation/logo.png" alt="Endless Charms Logo" class="logo-img">
          </a>
          <div class="nav-links">
            <a href="/" class="nav-link">HOME</a>
            <a href="/blogs" class="nav-link">BLOGS</a>
            <div class="nav-item">
              <span class="nav-link">SHOP</span>
              <div class="dropdown-menu">
                <a href="/engagement-rings">Engagement Rings</a>
                <a href="/wedding-bands">Wedding Bands</a>
                <a href="/accessories">Other Accessories</a>
              </div>
            </div>
            <a href="/contact" class="nav-link">CONTACT</a>
            <a href="/about" class="nav-link">ABOUT</a>
          </div>
          <div class="nav-icons">
            <button id="headerSearchBtn" class="icon-btn">
              <img src="/images/navigation/search-icon.png" alt="Search" class="search-icon">
            </button>
            <button class="icon-btn" onclick="handleProfileClick()">
              <img src="/images/navigation/profile-icon.png" alt="Profile" class="profile-icon">
            </button>
            <button class="icon-btn" onclick="handleBagClick()">
              <img src="/images/navigation/bag.png" alt="Shopping Bag" class="bag-icon">
              <span class="bag-badge" style="display: none;">0</span>
            </button>
          </div>
        </nav>
      </div>
    </header>

    <!-- Search dropdown -->
    <div id="searchDropdown" class="search-dropdown">
      <div class="search-dropdown-inner container">
        <div class="search-bar-row">
          <input
            id="headerSearchInput"
            type="text"
            class="header-search-input"
            placeholder="Search products, e.g. 'moissanite'"
          />
          <button id="headerSearchClose" class="icon-btn">
            &times;
          </button>
        </div>
        <div id="searchResults" class="search-results-grid">
        </div>
      </div>
    </div>

  <main class="container checkout-page" style="padding-top:140px;">
    <h1 class="checkout-title">Checkout</h1>
    <hr class="thin-sep">

    <section class="delivery-card" id="deliveryCard">
      <div class="delivery-left">
        <div class="loc-icon">üìç</div>
        <div class="delivery-info">
          <div class="delivery-label">Delivery Address</div>
          <div class="delivery-name" id="deliveryName"> </div>
          <div class="delivery-phone" id="deliveryPhone"> </div>
          <div class="delivery-address" id="deliveryAddress">Please input your delivery address to proceed.</div>
        </div>
      </div>
      <div class="delivery-right">
        <button class="btn btn-change" id="changeAddressBtn">Change / Add</button>
      </div>
    </section>

    <div class="items-and-summary">
      <div class="items-column">
        <!-- Make items list scrollable to prevent page from growing vertically -->
        <div class="items-box checkout-items-container" style="max-height:400px;overflow-y:auto;">
          <div class="items-placeholder">*Items shown here</div>
        </div>
      </div>

      <aside class="sidebar">
        <div class="bank-choice">
          <div class="bank-label">BANK CHOICE</div>
          <div class="bank-dropdown" id="bankDropdown">
            <div class="bank-selected" id="bankSelected">BPI <span class="chev">‚ñæ</span></div>
            <div class="bank-options" id="bankOptions">
              <div class="bank-option">BPI</div>
              <div class="bank-option">BDO</div>
              <div class="bank-option">GCASH</div>
            </div>
          </div>
        </div>

        <!-- Move subtotal box directly under bank choice and left-align content -->
        <div class="summary-box summary-right" style="margin-top:12px;text-align:left;">
          <div class="subtotal-label">Subtotal (No. Items):</div>
          <div class="subtotal-amount">‚Ç±0.00</div>
          <div id="orderError" class="order-error" style="display:none;margin-top:8px;color:#b71c1c;font-size:13px"></div>
          <button id="completeOrderBtn" class="btn btn-outline" disabled>Complete Order</button>
        </div>
      </aside>
    </div>

    <!-- Payment Modal -->
    <div class="modal-overlay" id="paymentModal" aria-hidden="true">
      <div class="modal-inner">
        <div class="modal-left">
          <div class="bank-card">
            <!-- bank card image (logo, account number) -->
            <img class="bank-card-img" src="/images/payments/bpi_card.svg" alt="Bank card" />
              <!-- dynamic QR image pulled from /images/bank-qr/<bank>.png -->
              <div class="qr-wrap"><img class="bank-qr-img" src="/images/bank-qr/bpi.png" alt="QR code" /></div>
          </div>
        </div>
        <div class="modal-right">
          <div class="modal-step">
            <h4>Step 1: Choose Payment Method</h4>
            <div class="payment-option"><label><input type="radio" name="paymethod" value="full" checked> Pay in Full</label></div>
            <div class="payment-option"><label><input type="radio" name="paymethod" value="partial"> Partial Payment (or 50% Deposit)</label></div>
          </div>
          <div class="modal-step">
            <h4>Step 2: Upload Receipt</h4>
            <div class="upload-area" id="uploadArea">
              <input type="file" id="receiptInput" accept="image/*" />
              <div class="upload-placeholder">üì∑ Upload Receipt</div>
            </div>
          </div>
          <div class="modal-step">
            <h4>Step 3</h4>
            <p>Go Back to Check Out and Click "Complete Order"</p>
          </div>
          <div class="modal-actions">
            <button class="btn btn-primary" id="paymentBackBtn">Back</button>
          </div>
        </div>
      </div>
    </div>    <!-- Address Modal -->
    <div class="modal-overlay" id="addressModal" aria-hidden="true">
      <div class="address-modal">
        <h3>Delivery Address</h3>
        <form id="addressForm" class="address-form">
          <div class="form-row">
            <div style="flex:1;">
              <label style="display:block;margin-bottom:4px;color:#620418;font-size:13px;font-weight:600;">First Name <span style="color:#b71c1c;">*</span></label>
              <input type="text" name="firstName" placeholder="" required>
            </div>
            <div style="flex:1;">
              <label style="display:block;margin-bottom:4px;color:#620418;font-size:13px;font-weight:600;">Last Name <span style="color:#b71c1c;">*</span></label>
              <input type="text" name="lastName" placeholder="" required>
            </div>
          </div>
          <div class="form-row">
            <div style="flex:1;">
              <label style="display:block;margin-bottom:4px;color:#620418;font-size:13px;font-weight:600;">Province <span style="color:#b71c1c;">*</span></label>
              <input type="text" name="province" placeholder="" required>
            </div>
            <div style="flex:1;">
              <label style="display:block;margin-bottom:4px;color:#620418;font-size:13px;font-weight:600;">City <span style="color:#b71c1c;">*</span></label>
              <input type="text" name="city" placeholder="" required>
            </div>
          </div>
          <div class="form-row">
            <div style="flex:1;">
              <label style="display:block;margin-bottom:4px;color:#620418;font-size:13px;font-weight:600;">Barangay <span style="color:#b71c1c;">*</span></label>
              <input type="text" name="barangay" placeholder="" required>
            </div>
            <div style="flex:1;">
              <label style="display:block;margin-bottom:4px;color:#620418;font-size:13px;font-weight:600;">Postal Code <span style="color:#b71c1c;">*</span></label>
              <input type="text" name="postalCode" placeholder="" required>
            </div>
          </div>
          <div class="form-row single">
            <label style="display:block;margin-bottom:4px;color:#620418;font-size:13px;font-weight:600;">Street Address <span style="color:#b71c1c;">*</span></label>
            <input type="text" name="street" placeholder="" required>
          </div>
          <div class="form-row single">
            <label style="display:block;margin-bottom:4px;color:#620418;font-size:13px;font-weight:600;">Phone Number <span style="color:#b71c1c;">*</span></label>
            <input type="text" name="phone" placeholder="" required>
          </div>
          <div class="form-row single">
            <label style="display:block;margin-bottom:4px;color:#620418;font-size:13px;font-weight:600;">Instagram/Facebook Handle (Optional)</label>
            <input type="text" name="social" placeholder="">
          </div>
          <div class="form-actions">
            <button type="button" class="btn btn-outline" id="addrCancel">Cancel</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>

  </main>

