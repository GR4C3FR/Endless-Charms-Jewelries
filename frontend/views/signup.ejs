    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Endless Charms</title>
    <meta name="description" content="Create your Endless Charms account to shop engagement rings, wedding bands, and custom jewelry. Sign up to get exclusive access and personalized designs.">
    <meta name="keywords" content="signup account, jewelry shopping, create account, engagement rings online, wedding bands purchase">
    <link rel="canonical" href="https://endlesscharms.store/signup">
    <meta property="og:title" content="Sign Up - Endless Charms">
    <meta property="og:description" content="Create your Endless Charms account to shop premium jewelry and custom designs.">
    <meta property="og:url" content="https://endlesscharms.store/signup">
    <meta property="og:type" content="website">
