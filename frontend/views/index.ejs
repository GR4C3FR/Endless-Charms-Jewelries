  <script src="/js/script.js"></script>
  <script>
    // Handle Google OAuth success callback
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('google_login') === 'success') {
      // Fetch user info from backend
      fetch('/api/auth/check')
        .then(res => res.json())
        .then(data => {
          if (data.loggedIn) {
            localStorage.setItem('ec_user_logged_in', 'true');
            localStorage.setItem('ec_user_email', data.userEmail);
            
            // Load bag from database after Google login
            return fetch('/api/bag').then(bagRes => {
              if (bagRes.ok) {
                return bagRes.json().then(bagData => {
                  if (bagData.success && Array.isArray(bagData.bag)) {
                    localStorage.setItem('ec_bag', JSON.stringify(bagData.bag));
                  }
                });
              }
            }).catch(err => console.error('Error loading bag:', err));
          }
        })
        .then(() => {
          // Remove query parameter from URL
          window.history.replaceState({}, document.title, '/');
          // Update badge
          updateBadge();
        })
        .catch(err => console.error('Error checking auth:', err));
    }
