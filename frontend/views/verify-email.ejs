  <link rel="icon" href="/images/logo.png" type="image/png">
  <title>Email Verification - Endless Charms</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .verification-page {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      padding: 20px;
    }

    .verification-container {
      background: white;
      border-radius: 16px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      max-width: 500px;
      width: 100%;
      padding: 40px 30px;
      text-align: center;
    }

    .verification-icon {
      margin: 0 auto 20px;
      width: 80px;
      height: 80px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      animation: fadeIn 0.5s ease-in;
    }

    .verification-icon.loading {
      background: #f3f4f6;
      border: 3px solid #e5e7eb;
    }

    .verification-icon.success {
      background: #d1fae5;
      border: 3px solid #10b981;
    }

    .verification-icon.error {
      background: #fee2e2;
      border: 3px solid #ef4444;
    }

    .spinner {
      width: 40px;
      height: 40px;
      border: 4px solid #e5e7eb;
      border-top-color: #8B4513;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: scale(0.8);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    .verification-title {
      color: #1f2937;
      font-size: 28px;
      font-weight: 600;
      margin: 20px 0 10px;
    }

    .verification-message {
      color: #6b7280;
      font-size: 16px;
      line-height: 1.6;
      margin-bottom: 30px;
    }

    .verification-btn {
      display: inline-block;
      background: #8B4513;
      color: white;
      padding: 14px 32px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 600;
      font-size: 16px;
      transition: all 0.3s ease;
      border: none;
      cursor: pointer;
      margin: 5px;
    }

    .verification-btn:hover {
      background: #6d3410;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
    }

    .verification-btn.secondary {
      background: white;
      color: #8B4513;
      border: 2px solid #8B4513;
    }

    .verification-btn.secondary:hover {
      background: #f9fafb;
    }

    .loading-text {
      color: #6b7280;
      font-size: 14px;
      margin-top: 15px;
    }
  </style>
</head>
<body>
  <div class="verification-page">
    <div class="verification-container">
      <!-- Loading State -->
      <div id="loadingState">
        <div class="verification-icon loading">
          <div class="spinner"></div>
        </div>
        <h1 class="verification-title">Verifying Your Email</h1>
        <p class="verification-message">Please wait while we verify your email address...</p>
        <p class="loading-text">This should only take a moment</p>
      </div>

      <!-- Success State -->
      <div id="successState" style="display: none;">
        <div class="verification-icon success">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
        </div>
        <h1 class="verification-title">Email Verified! âœ¨</h1>
        <p class="verification-message">
          Your email has been successfully verified. You can now access all features of Endless Charms!
        </p>
        <div>
          <a href="/login" class="verification-btn">Log In Now</a>
          <a href="/" class="verification-btn secondary">Go to Home</a>
        </div>
      </div>

      <!-- Error State -->
      <div id="errorState" style="display: none;">
        <div class="verification-icon error">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#ef4444" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
        </div>
        <h1 class="verification-title">Verification Failed</h1>
        <p class="verification-message" id="errorMessage">
          We couldn't verify your email address. The link may be invalid or expired.
        </p>
        <div>
          <a href="/login" class="verification-btn">Go to Login</a>
          <a href="/" class="verification-btn secondary">Go to Home</a>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Get token from URL
    const urlParams = new URLSearchParams(window.location.search);
    const token = urlParams.get('token');

    // Verify email on page load
    async function verifyEmail() {
      if (!token) {
        showError('No verification token found in the URL.');
        return;
      }

      try {
        const response = await fetch(`/api/auth/verify-email?token=${encodeURIComponent(token)}`);
        const data = await response.json();

        if (data.success) {
          showSuccess();
        } else {
          showError(data.message || 'Verification failed. Please try again.');
        }
      } catch (error) {
        console.error('Verification error:', error);
        showError('An error occurred during verification. Please try again later.');
      }
    }

    function showSuccess() {
      document.getElementById('loadingState').style.display = 'none';
      document.getElementById('errorState').style.display = 'none';
      document.getElementById('successState').style.display = 'block';
    }

    function showError(message) {
      document.getElementById('loadingState').style.display = 'none';
      document.getElementById('successState').style.display = 'none';
      document.getElementById('errorMessage').textContent = message;
      document.getElementById('errorState').style.display = 'block';
    }

    // Start verification when page loads
    verifyEmail();
  </script>
</body>
</html>
