    </div>
  </div>

  <!-- Page Header -->
  <section class="all-blogs-header">
    <div class="all-blogs-overlay"></div>
    <div class="all-blogs-content">
      <h1 class="all-blogs-title">All Blog Articles</h1>
      <p class="all-blogs-subtitle">Explore our complete collection of jewelry insights, guides, and expert tips</p>
    </div>
  </section>

  <!-- All Blog Cards Section -->
  <section class="all-blogs-section">
    <div class="container">
      <div class="all-blogs-grid">
        <% if (blogs && blogs.length > 0) { %>
          <% blogs.forEach(function(blog) { %>
            <article class="blog-card">
              <div class="blog-card-image">
                <img src="<%= blog.image %>" alt="<%= blog.title %>">
              </div>
              <div class="blog-card-content">
                <span class="blog-timestamp">
                  <%= new Date(blog.publishedAt).toLocaleDateString('en-US', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                </span>
                <h3 class="blog-card-title"><%= blog.title %></h3>
                <p class="blog-card-excerpt"><%= blog.excerpt %></p>
                <a href="/blogs/<%= blog.slug %>" class="blog-read-btn">Read Now</a>
              </div>
            </article>
          <% }); %>
        <% } else { %>
          <p>No blogs available at the moment.</p>
        <% } %>
      </div>
    </div>
  </section>

