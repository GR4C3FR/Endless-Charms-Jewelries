<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/images/logo.png" type="image/png">
  <title>Email Verification - Endless Charms</title>
  <link rel="stylesheet" href="/css/style.css?v=<%= assetsVersion %>">
  <style>
    .verification-page {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #f9f9f9;
      padding: 20px;
    }

    .verification-container {
      background: #ffffff;
      border-radius: 6px;
      box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
      max-width: 500px;
      width: 100%;
      padding: 48px 36px;
      text-align: center;
    }

    .verification-icon {
      margin: 0 auto 24px;
      width: 56px;
      height: 56px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      animation: fadeIn 0.5s ease-in;
    }

    .verification-icon.loading {
      background: #f3f4f6;
      border: 2px solid #e5e7eb;
    }

    .verification-icon.success {
      background: #f9fafb;
      border: 2px solid #5D0E1A;
    }

    .verification-icon.error {
      background: #f9fafb;
      border: 2px solid #9ca3af;
    }

    .spinner {
      width: 32px;
      height: 32px;
      border: 3px solid #e5e7eb;
      border-top-color: #5D0E1A;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: scale(0.9);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    .verification-title {
      font-family: 'Playfair Display', serif;
      color: #5D0E1A;
      font-size: 26px;
      font-weight: 500;
      margin: 20px 0 10px;
      letter-spacing: 0.5px;
    }

    .verification-message {
      color: #4b5563;
      font-size: 15px;
      line-height: 1.6;
      margin-bottom: 28px;
    }

    .verification-btn {
      display: inline-block;
      background: #5D0E1A;
      color: #ffffff;
      padding: 12px 28px;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 500;
      font-size: 15px;
      transition: background 0.3s ease;
      border: none;
      cursor: pointer;
      margin: 5px;
      letter-spacing: 0.3px;
    }

    .verification-btn:hover {
      background: #4a0a12;
    }

    .verification-btn.secondary {
      background: #ffffff;
      color: #5D0E1A;
      border: 1px solid #5D0E1A;
    }

    .verification-btn.secondary:hover {
      background: #fafafa;
    }

    .loading-text {
      color: #9ca3af;
      font-size: 13px;
      margin-top: 12px;
    }
  </style>
</head>
<body>
  <div class="verification-page">
    <div class="verification-container">
      <!-- Loading State -->
      <div id="loadingState">
        <div class="verification-icon loading">
          <div class="spinner"></div>
        </div>
        <h1 class="verification-title">Verifying Your Email</h1>
        <p class="verification-message">Please wait while we verify your email address...</p>
        <p class="loading-text">This should only take a moment</p>
      </div>

      <!-- Success State -->
      <div id="successState" style="display: none;">
        <div class="verification-icon success">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#5D0E1A" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
        </div>
        <h1 class="verification-title">Email Verified</h1>
        <p class="verification-message">
          Your email has been successfully verified. You can now access all features of Endless Charms.
        </p>
        <div>
          <a href="/login" class="verification-btn">Log In Now</a>
          <a href="/" class="verification-btn secondary">Go to Home</a>
        </div>
      </div>

      <!-- Error State -->
      <div id="errorState" style="display: none;">
        <div class="verification-icon error">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#6b7280" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
        </div>
        <h1 class="verification-title">Verification Failed</h1>
        <p class="verification-message" id="errorMessage">
          We couldn't verify your email address. The link may be invalid or expired.
        </p>
        <div>
          <a href="/login" class="verification-btn">Go to Login</a>
          <a href="/" class="verification-btn secondary">Go to Home</a>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Get token from URL
    const urlParams = new URLSearchParams(window.location.search);
    const token = urlParams.get('token');

    // Verify email on page load
    async function verifyEmail() {
      if (!token) {
        showError('No verification token found in the URL.');
        return;
      }

      try {
        const response = await fetch(`/api/auth/verify-email?token=${encodeURIComponent(token)}`);
        const data = await response.json();

        if (data.success) {
          showSuccess();
        } else {
          showError(data.message || 'Verification failed. Please try again.');
        }
      } catch (error) {
        console.error('Verification error:', error);
        showError('An error occurred during verification. Please try again later.');
      }
    }

    function showSuccess() {
      document.getElementById('loadingState').style.display = 'none';
      document.getElementById('errorState').style.display = 'none';
      document.getElementById('successState').style.display = 'block';
    }

    function showError(message) {
      document.getElementById('loadingState').style.display = 'none';
      document.getElementById('successState').style.display = 'none';
      document.getElementById('errorMessage').textContent = message;
      document.getElementById('errorState').style.display = 'block';
    }

    // Start verification when page loads
    verifyEmail();
  </script>
</body>
</html>
