  <script src="/js/script.js"></script>
  <script>
    // Handle logout - clear localStorage
    document.querySelector('.profile-nav-item.logout').addEventListener('click', function(e) {
      e.preventDefault();
      // Clear all user-related localStorage items including bag
      localStorage.removeItem('ec_user_logged_in');
      localStorage.removeItem('ec_user_email');
      localStorage.removeItem('ec_user_name');
      localStorage.removeItem('ec_bag'); // Clear bag items
      localStorage.removeItem('ec_profile'); // Clear profile
      // Redirect to logout endpoint
      window.location.href = '/api/auth/logout';
    });

    // Tab switching
    document.querySelectorAll('.profile-nav-item').forEach(item => {
      item.addEventListener('click', function(e) {
        if (this.classList.contains('logout')) return;
        
        e.preventDefault();
        const tab = this.dataset.tab;
        
        // Update active nav item
        document.querySelectorAll('.profile-nav-item').forEach(nav => nav.classList.remove('active'));
        this.classList.add('active');
        
        // Update active tab
        document.querySelectorAll('.profile-tab').forEach(content => content.classList.remove('active'));
        document.getElementById(tab + '-tab').classList.add('active');
        
        // Load orders if orders tab is clicked
        if (tab === 'orders') {
          loadOrders();
        }
      });
    });

    // Toggle password visibility for all password fields
    document.querySelectorAll('.toggle-password-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const targetId = this.dataset.target;
        const input = document.getElementById(targetId);
        const eyeIcon = this.querySelector('.eye-icon');
        
        if (input.type === 'password') {
          input.type = 'text';
          eyeIcon.innerHTML = '<path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line>';
        } else {
          input.type = 'password';
          eyeIcon.innerHTML = '<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle>';
        }
      });
    });

    // Profile form submission
    document.getElementById('profile-form').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const isAdmin = '<%= user && user.isAdmin ? "true" : "false" %>' === 'true';
      const errorDiv = document.getElementById('passwordError');
      const passwordSuccessDiv = document.getElementById('passwordSuccess');
      const emailSuccessDiv = document.getElementById('emailSuccess');
      const firstNameSuccessDiv = document.getElementById('firstNameSuccess');
      const lastNameSuccessDiv = document.getElementById('lastNameSuccess');
      const phoneSuccessDiv = document.getElementById('phoneSuccess');
      const addressSuccessDiv = document.getElementById('addressSuccess');
      
      // Clear all messages
      if (errorDiv) errorDiv.style.display = 'none';
      if (passwordSuccessDiv) passwordSuccessDiv.style.display = 'none';
      if (emailSuccessDiv) emailSuccessDiv.style.display = 'none';
      if (firstNameSuccessDiv) firstNameSuccessDiv.style.display = 'none';
      if (lastNameSuccessDiv) lastNameSuccessDiv.style.display = 'none';
      if (phoneSuccessDiv) phoneSuccessDiv.style.display = 'none';
      if (addressSuccessDiv) addressSuccessDiv.style.display = 'none';
      
      // Check if user wants to change password
      const currentPasswordInput = document.getElementById('currentPassword');
      const newPasswordInput = document.getElementById('newPassword');
      const confirmPasswordInput = document.getElementById('confirmPassword');
      
      const formData = {
        firstName: document.getElementById('firstName').value,
        lastName: document.getElementById('lastName').value
      };
      
      // Include email only for admin users
      if (isAdmin) {
        formData.email = document.getElementById('email').value;      } else {
        // Include phone only for non-admin users
        const phoneInput = document.getElementById('phone');
        if (phoneInput) formData.phone = phoneInput.value;
      }
      
      if (currentPasswordInput && newPasswordInput && confirmPasswordInput) {
        const currentPassword = currentPasswordInput.value;
        const newPassword = newPasswordInput.value;
        const confirmPassword = confirmPasswordInput.value;
        
        // If any password field is filled, validate all password fields
        if (currentPassword || newPassword || confirmPassword) {
          if (!currentPassword || !newPassword || !confirmPassword) {
            if (errorDiv) {
              errorDiv.textContent = 'All password fields are required to change password';
              errorDiv.style.display = 'block';
            }
            return;
          }
          
          if (newPassword !== confirmPassword) {
            if (errorDiv) {
              errorDiv.textContent = 'New passwords do not match!';
              errorDiv.style.display = 'block';
            }
            return;
          }
          
          if (newPassword.length < 8) {
            if (errorDiv) {
              errorDiv.textContent = 'New password must be at least 8 characters long!';
              errorDiv.style.display = 'block';
            }
            return;
          }
          
          if (currentPassword === newPassword) {
            if (errorDiv) {
              errorDiv.textContent = 'New password must be different from current password!';
              errorDiv.style.display = 'block';
            }
            return;
          }
          
          // Add password change request
          formData.currentPassword = currentPassword;
          formData.newPassword = newPassword;
        }
      }
      
      try {
        const userId = '<%= user ? user._id : "" %>';
        const originalEmail = '<%= user ? user.email : "" %>';
        const originalFirstName = '<%= user ? user.firstName : "" %>';
        const originalLastName = '<%= user ? user.lastName : "" %>';
        const originalPhone = '<%= user && user.phone ? user.phone : "" %>';
        let passwordChanged = false;
        let emailChanged = false;
        let firstNameChanged = false;
        let lastNameChanged = false;
        let phoneChanged = false;
        
        // Handle password change separately if provided
        if (formData.currentPassword && formData.newPassword) {
          const passwordResponse = await fetch(`/api/users/${userId}/change-password`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
              currentPassword: formData.currentPassword,
              newPassword: formData.newPassword
            })
          });
          
          if (!passwordResponse.ok) {
            const passwordData = await passwordResponse.json();
            if (errorDiv) {
              errorDiv.textContent = passwordData.message || 'Failed to change password';
              errorDiv.style.display = 'block';
            }
            return;
          }
          
          passwordChanged = true;
          // Remove password fields from formData before updating profile
          delete formData.currentPassword;
          delete formData.newPassword;
        }
        
        // Check if email changed
        if (isAdmin && formData.email && formData.email !== originalEmail) {
          emailChanged = true;
        }
        
        // Check if first name changed
        if (formData.firstName && formData.firstName !== originalFirstName) {
          firstNameChanged = true;
        }
        
        // Check if last name changed
        if (formData.lastName && formData.lastName !== originalLastName) {
          lastNameChanged = true;
        }
        
        // Check if phone changed
        if (!isAdmin && formData.phone !== undefined && formData.phone !== originalPhone) {
          phoneChanged = true;
        }
        
        // Update profile information
        const response = await fetch(`/api/users/${userId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(formData)
        });
        
        if (response.ok) {
          // Show success messages in appropriate places
          if (firstNameChanged && firstNameSuccessDiv) {
            firstNameSuccessDiv.textContent = 'First name updated successfully!';
            firstNameSuccessDiv.style.display = 'block';
          }
          
          if (lastNameChanged && lastNameSuccessDiv) {
            lastNameSuccessDiv.textContent = 'Last name updated successfully!';
            lastNameSuccessDiv.style.display = 'block';
          }
          
          if (emailChanged && emailSuccessDiv) {
            emailSuccessDiv.textContent = 'Email updated successfully! Please use your new email to log in next time.';
            emailSuccessDiv.style.display = 'block';
          }
          
          if (passwordChanged && passwordSuccessDiv) {
            passwordSuccessDiv.textContent = 'Password updated successfully!';
            passwordSuccessDiv.style.display = 'block';
            // Clear password fields
            if (currentPasswordInput) currentPasswordInput.value = '';
            if (newPasswordInput) newPasswordInput.value = '';
            if (confirmPasswordInput) confirmPasswordInput.value = '';
          }
          
          if (phoneChanged && phoneSuccessDiv) {
            phoneSuccessDiv.textContent = 'Phone number updated successfully!';
            phoneSuccessDiv.style.display = 'block';
          }
        } else {
          const data = await response.json();
          if (errorDiv) {
            errorDiv.textContent = data.message || 'Failed to update profile. Please try again.';
            errorDiv.style.display = 'block';
          }
        }
      } catch (error) {
        console.error('Error:', error);
        if (errorDiv) {
          errorDiv.textContent = 'An error occurred. Please try again.';
          errorDiv.style.display = 'block';
        }
      }
    });

      // If redirected with ?tab=orders open orders tab
      if (window.location.search && window.location.search.indexOf('tab=orders') !== -1) {
        const ordersNav = document.querySelector('.profile-nav-item[data-tab="orders"]');
        if (ordersNav) ordersNav.click();
      }

    // Load orders
    async function loadOrders() {
      const ordersListDiv = document.getElementById('orders-list');
      try {
        const userId = '<%= user ? user._id : "" %>';
        const response = await fetch(`/api/orders?userId=${userId}`);
        
        if (!response.ok) {
          throw new Error('Failed to fetch orders');
        }
        
        const orders = await response.json();
        
        if (!orders || orders.length === 0) {
          ordersListDiv.innerHTML = '<p class="no-orders">No orders yet.</p>';
          return;
        }
        
        ordersListDiv.innerHTML = orders.map(order => `
          <div class="order-card">
            <div class="order-header">
              <span class="order-number">Order #${order._id.substring(0, 8).toUpperCase()}</span>
              <span class="order-date">${new Date(order.createdAt).toLocaleDateString()}</span>
            </div>
            <div class="order-status">
              <span class="status-badge status-${order.status}">${order.status}</span>
            </div>
            <div class="order-items">
              ${order.items.map(item => `
                <div class="order-item">
                  <span>${item.product?.name || 'Product'} x ${item.quantity}</span>
                  <span>₱${(item.price * item.quantity).toLocaleString()}</span>
                </div>
              `).join('')}
            </div>
            <div class="order-total">
              <strong>Total: ₱${order.totalAmount.toLocaleString()}</strong>
            </div>
          </div>
        `).join('');
      } catch (error) {
        console.error('Error loading orders:', error);
        ordersListDiv.innerHTML = '<p class="error-text">Failed to load orders.</p>';      }
    }

    // Load addresses
    async function loadAddresses() {
      const addressesListDiv = document.getElementById('addressesList');
      try {
        const userId = '<%= user ? user._id : "" %>';
        const response = await fetch(`/api/users/${userId}`);
        
        if (!response.ok) {
          throw new Error('Failed to fetch addresses');
        }
        
        const userData = await response.json();
        const addresses = userData.addresses || [];
        
        if (addresses.length === 0) {
          addressesListDiv.innerHTML = '<p class="no-orders">No saved addresses yet.</p>';
          return;
        }
        
        addressesListDiv.innerHTML = addresses.map(addr => `
          <div class="address-card" style="background: white; padding: 20px; border-radius: 8px; border: 1px solid #ddd; margin-bottom: 15px; position: relative;">
            ${addr.isDefault ? '<span style="position: absolute; top: 10px; right: 10px; background: #620418; color: white; padding: 4px 12px; border-radius: 4px; font-size: 12px; font-weight: 600;">DEFAULT</span>' : ''}
            <h4 style="margin-top: 0; color: #620418;">${addr.firstName} ${addr.lastName}</h4>
            <p style="margin: 8px 0;"><strong>Phone:</strong> ${addr.phone}</p>
            ${addr.social ? `<p style="margin: 8px 0;"><strong>Social:</strong> ${addr.social}</p>` : ''}
            <p style="margin: 8px 0;"><strong>Address:</strong></p>
            <p style="margin-left: 15px; color: #666; line-height: 1.6;">
              ${[addr.street, addr.barangay, addr.city, addr.province, addr.postalCode].filter(Boolean).join(', ')}
            </p>
            <div style="margin-top: 15px; display: flex; gap: 10px;">
              <button class="btn btn-outline edit-address-btn" data-id="${addr._id}" style="padding: 6px 12px; font-size: 13px;">Edit</button>
              <button class="btn btn-outline delete-address-btn" data-id="${addr._id}" style="padding: 6px 12px; font-size: 13px; color: #dc2626; border-color: #dc2626;">Delete</button>
              ${!addr.isDefault ? `<button class="btn btn-outline set-default-btn" data-id="${addr._id}" style="padding: 6px 12px; font-size: 13px;">Set as Default</button>` : ''}
            </div>
          </div>
        `).join('');
        
        // Add event listeners for edit, delete, and set default buttons
        document.querySelectorAll('.edit-address-btn').forEach(btn => {
          btn.addEventListener('click', function() {
            const addressId = this.dataset.id;
            const address = addresses.find(a => a._id === addressId);
            if (address) {
              openAddressModal(address);
            }
          });
        });
        
        document.querySelectorAll('.delete-address-btn').forEach(btn => {
          btn.addEventListener('click', async function() {
            const addressId = this.dataset.id;
            if (confirm('Are you sure you want to delete this address?')) {
              await deleteAddress(addressId);
            }
          });
        });
        
        document.querySelectorAll('.set-default-btn').forEach(btn => {
          btn.addEventListener('click', async function() {
            const addressId = this.dataset.id;
            await setDefaultAddress(addressId);
          });
        });
      } catch (error) {
        console.error('Error loading addresses:', error);
        addressesListDiv.innerHTML = '<p class="error-text">Failed to load addresses.</p>';
      }
    }

    // Open address modal for add or edit
    function openAddressModal(address = null) {
      const modal = document.getElementById('addressModal');
      const form = document.getElementById('addressForm');
      const addressIdInput = document.getElementById('addressId');
      
      // Reset form
      form.reset();
      
      if (address) {
        // Editing existing address
        addressIdInput.value = address._id;
        form.firstName.value = address.firstName;
        form.lastName.value = address.lastName;
        form.province.value = address.province;
        form.city.value = address.city;
        form.barangay.value = address.barangay;
        form.postalCode.value = address.postalCode;
        form.street.value = address.street;
        form.phone.value = address.phone;
        form.social.value = address.social || '';
        form.isDefault.checked = address.isDefault;
      } else {
        // Adding new address
        addressIdInput.value = '';
      }
      
      modal.style.display = 'flex';
      modal.style.alignItems = 'center';
      modal.style.justifyContent = 'center';
    }

    // Close address modal
    function closeAddressModal() {
      const modal = document.getElementById('addressModal');
      modal.style.display = 'none';
    }

    // Save address (add or update)
    async function saveAddress(formData) {
      try {
        const userId = '<%= user ? user._id : "" %>';
        const addressId = formData.get('addressId');
        
        const addressData = {
          firstName: formData.get('firstName'),
          lastName: formData.get('lastName'),
          province: formData.get('province'),
          city: formData.get('city'),
          barangay: formData.get('barangay'),
          postalCode: formData.get('postalCode'),
          street: formData.get('street'),
          phone: formData.get('phone'),
          social: formData.get('social'),
          isDefault: formData.get('isDefault') === 'on'
        };
        
        let url, method;
        if (addressId) {
          // Update existing address
          url = `/api/users/${userId}/addresses/${addressId}`;
          method = 'PUT';
        } else {
          // Add new address
          url = `/api/users/${userId}/addresses`;
          method = 'POST';
        }
        
        const response = await fetch(url, {
          method: method,
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(addressData)
        });
        
        if (response.ok) {
          closeAddressModal();
          await loadAddresses();
        } else {
          const data = await response.json();
          alert(data.message || 'Failed to save address');
        }
      } catch (error) {
        console.error('Error saving address:', error);
        alert('An error occurred. Please try again.');
      }
    }

    // Delete address
    async function deleteAddress(addressId) {
      try {
        const userId = '<%= user ? user._id : "" %>';
        const response = await fetch(`/api/users/${userId}/addresses/${addressId}`, {
          method: 'DELETE'
        });
        
        if (response.ok) {
          await loadAddresses();
        } else {
          const data = await response.json();
          alert(data.message || 'Failed to delete address');
        }
      } catch (error) {
        console.error('Error deleting address:', error);
        alert('An error occurred. Please try again.');
      }
    }

    // Set default address
    async function setDefaultAddress(addressId) {
      try {
        const userId = '<%= user ? user._id : "" %>';
        const response = await fetch(`/api/users/${userId}/addresses/${addressId}/default`, {
          method: 'PUT'
        });
        
        if (response.ok) {
          await loadAddresses();
        } else {
          const data = await response.json();
          alert(data.message || 'Failed to set default address');
        }
      } catch (error) {
        console.error('Error setting default address:', error);
        alert('An error occurred. Please try again.');
      }
    }

    // Add Address button event listener
    document.getElementById('addAddressBtn').addEventListener('click', function() {
      openAddressModal();
    });

    // Address form submission
    document.getElementById('addressForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      const formData = new FormData(this);
      await saveAddress(formData);
    });

    // Cancel button in address modal
    document.getElementById('addrCancel').addEventListener('click', function() {
      closeAddressModal();
    });

    // Click outside modal to close
    document.getElementById('addressModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeAddressModal();
      }
    });

    // Load addresses when addresses tab is clicked
    document.querySelector('.profile-nav-item[data-tab="addresses"]').addEventListener('click', function() {
      loadAddresses();
    });


    // Resend Verification Email functionality
    const resendBtn = document.getElementById('resendVerificationBtn');
    if (resendBtn) {
      resendBtn.addEventListener('click', async function() {
        const messageDiv = document.getElementById('resendVerificationMessage');
        const originalText = this.textContent;
        
        // Disable button and show loading state
        this.disabled = true;
        this.textContent = 'Sending...';
        this.style.opacity = '0.6';
        this.style.cursor = 'not-allowed';
        
        try {
          const response = await fetch('/api/auth/resend-verification', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            }
          });
          
          const data = await response.json();
          
          if (data.success) {
            messageDiv.textContent = data.message;
            messageDiv.style.color = '#5D0E1A';
            messageDiv.style.display = 'block';
            
            // Hide button after successful send
            this.style.display = 'none';
            
            // Show button again after 60 seconds
            setTimeout(() => {
              this.style.display = 'block';
              this.disabled = false;
              this.textContent = originalText;
              this.style.opacity = '1';
              this.style.cursor = 'pointer';
              messageDiv.style.display = 'none';
            }, 60000);
          } else {
            messageDiv.textContent = data.message;
            messageDiv.style.color = '#6b7280';
            messageDiv.style.display = 'block';
            
            // Re-enable button
            this.disabled = false;
            this.textContent = originalText;
            this.style.opacity = '1';
            this.style.cursor = 'pointer';
          }
        } catch (error) {
          console.error('Error resending verification:', error);
          messageDiv.textContent = 'Failed to send verification email. Please try again.';
          messageDiv.style.color = '#6b7280';
          messageDiv.style.display = 'block';
          
          // Re-enable button
          this.disabled = false;
          this.textContent = originalText;
          this.style.opacity = '1';
          this.style.cursor = 'pointer';
        }
      });
    }

  </script>
