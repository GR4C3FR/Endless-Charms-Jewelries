  <main class="profile-page">
    <div class="profile-container">
      <div class="profile-sidebar">
        <div class="profile-header">
          <h2><%= user ? user.firstName + ' ' + user.lastName : 'Guest' %></h2>
          <p class="profile-email"><%= user ? user.email : '' %></p>
        </div>
        <nav class="profile-nav">
          <a href="#" class="profile-nav-item active" data-tab="account">Account</a>
          <% if (!user.isAdmin) { %>
          <a href="#" class="profile-nav-item" data-tab="orders">Order History</a>
          <a href="#" class="profile-nav-item" data-tab="addresses">Addresses</a>
          <% } %>
          <a href="/api/auth/logout" class="profile-nav-item logout">Logout</a>
        </nav>
      </div>

      <div class="profile-content">
        <!-- Account Details Tab -->
        <div id="account-tab" class="profile-tab active">
          <h3>Account</h3>
          <form id="profile-form" class="profile-details-form">
            <div class="form-row">
              <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" name="firstName" value="<%= user ? user.firstName : '' %>" required>
                <div id="firstNameSuccess" style="color: #059669; font-size: 14px; margin-top: 8px; display: none;"></div>
              </div>
              <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" id="lastName" name="lastName" value="<%= user ? user.lastName : '' %>" required>
                <div id="lastNameSuccess" style="color: #059669; font-size: 14px; margin-top: 8px; display: none;"></div>
              </div>
            </div>            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" value="<%= user ? user.email : '' %>" <%= user && user.isAdmin ? '' : 'disabled' %>>
              <div id="emailSuccess" style="color: #059669; font-size: 14px; margin-top: 8px; display: none;"></div>
            </div>
            <% if (!user.isAdmin) { %>
            <!-- Email Verification Status -->
            <div class="form-group" style="background: <%= user && user.isVerified ? '#fafafa' : '#fafafa' %>; padding: 15px; border-radius: 4px; border-left: 3px solid <%= user && user.isVerified ? '#5D0E1A' : '#9ca3af' %>;">
              <div style="display: flex; align-items: center; justify-content: space-between; gap: 15px;">
                <div style="display: flex; align-items: center; gap: 10px; flex: 1;">
                  <% if (user && user.isVerified) { %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#5D0E1A" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                      <polyline points="22 4 12 14.01 9 11.01"></polyline>
                    </svg>
                    <div>
                      <div style="font-weight: 500; color: #5D0E1A; font-size: 14px;">Email Verified</div>
                      <div style="color: #6b7280; font-size: 13px;">Your email address has been verified</div>
                    </div>
                  <% } else { %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#6b7280" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <circle cx="12" cy="12" r="10"></circle>
                      <line x1="12" y1="8" x2="12" y2="12"></line>
                      <line x1="12" y1="16" x2="12.01" y2="16"></line>
                    </svg>
                    <div>
                      <div style="font-weight: 500; color: #4b5563; font-size: 14px;">Email Not Verified</div>
                      <div style="color: #6b7280; font-size: 13px;">Please verify your email to access all features</div>
                    </div>
                  <% } %>
                </div>
                <% if (user && !user.isVerified) { %>
                  <button type="button" id="resendVerificationBtn" class="btn-resend-verification">
                    Resend Email
                  </button>
                <% } %>
              </div>
              <div id="resendVerificationMessage" style="margin-top: 10px; font-size: 13px; display: none;"></div>
            </div>
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="tel" id="phone" name="phone" value="<%= user && user.phone ? user.phone : '' %>" placeholder="+63 XXX XXX XXXX">
              <div id="phoneSuccess" style="color: #059669; font-size: 14px; margin-top: 8px; display: none;"></div>
            </div>
            <% if (!user.googleId) { %>
            <div class="form-group" style="position: relative;">
              <label for="currentPassword">Current Password</label>
              <input type="password" id="currentPassword" name="currentPassword" placeholder="Enter current password" style="padding-right: 40px;">
              <button type="button" class="toggle-password-btn" data-target="currentPassword" style="position: absolute; right: 10px; top: 65%; transform: translateY(-50%); background: none; border: none; cursor: pointer; padding: 5px; display: flex; align-items: center;" aria-label="Toggle password visibility">
                <svg class="eye-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
              </button>
            </div>
            <div class="form-group" style="position: relative;">
              <label for="newPassword">New Password</label>
              <input type="password" id="newPassword" name="newPassword" placeholder="Enter new password" style="padding-right: 40px;">
              <button type="button" class="toggle-password-btn" data-target="newPassword" style="position: absolute; right: 10px; top: 65%; transform: translateY(-50%); background: none; border: none; cursor: pointer; padding: 5px; display: flex; align-items: center;" aria-label="Toggle password visibility">
                <svg class="eye-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
              </button>
            </div>
            <div class="form-group" style="position: relative;">
              <label for="confirmPassword">Confirm New Password</label>
              <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password" style="padding-right: 40px;">
              <button type="button" class="toggle-password-btn" data-target="confirmPassword" style="position: absolute; right: 10px; top: 65%; transform: translateY(-50%); background: none; border: none; cursor: pointer; padding: 5px; display: flex; align-items: center;" aria-label="Toggle password visibility">
                <svg class="eye-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
              </button>
            </div>
            <div id="passwordError" style="color: #dc2626; font-size: 14px; margin-top: 8px; margin-bottom: 15px; display: none;"></div>
            <div id="passwordSuccess" style="color: #059669; font-size: 14px; margin-top: 8px; margin-bottom: 15px; display: none;"></div>
            <% } %>
            <% } %>
            <div class="form-actions">
              <button type="submit" class="btn-primary">Save Changes</button>
              <button type="button" class="btn-secondary" onclick="location.reload()">Cancel</button>
            </div>
          </form>
        </div>

        <!-- Order History Tab -->
        <% if (!user.isAdmin) { %>
        <div id="orders-tab" class="profile-tab">
          <h3>Order History</h3>
          <div id="orders-list">
            <p class="loading-text">Loading your orders...</p>
          </div>
        </div>
        <% } %>

        <!-- Addresses Tab -->
        <% if (!user.isAdmin) { %>
        <div id="addresses-tab" class="profile-tab">
          <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <h3 style="margin: 0;">Saved Addresses</h3>
            <button id="addAddressBtn" class="btn btn-primary" style="padding: 8px 16px; font-size: 14px;">Add Address</button>
          </div>
          <div class="addresses-list" id="addressesList">
            <p class="loading-text">Loading addresses...</p>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </main>

