  <!-- Blog Cards Section -->
  <section class="blog-cards-section">
    <div class="container">
      <div class="blog-header">
        <h2 class="blog-section-title">Jewelry Insights, Trends & Expert Guides!</h2>
        <div class="blog-nav">
          <a href="/blogs/all/view" class="view-all-link">View All Blogs</a>
        </div>
      </div>

      <div class="blog-cards-grid" id="blogCardsGrid">
        <% if (blogs && blogs.length > 0) { %>
          <% blogs.forEach(function(blog) { %>
            <article class="blog-card">
              <div class="blog-card-image">
                <img src="<%= blog.image %>" alt="<%= blog.title %>">
              </div>
              <div class="blog-card-content">
                <span class="blog-timestamp">
                  <%= new Date(blog.publishedAt).toLocaleDateString('en-US', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                </span>
                <h3 class="blog-card-title"><%= blog.title %></h3>
                <p class="blog-card-excerpt"><%= blog.excerpt %></p>
                <a href="/blogs/<%= blog.slug %>" class="blog-read-btn">Read Now</a>
              </div>
            </article>
          <% }); %>
        <% } else { %>
          <p>No blogs available at the moment.</p>
        <% } %>
      </div>

      <!-- Pagination -->
      <% if (totalPages && totalPages > 1) { %>
        <div class="pagination-container">
          <div class="pagination">
            <!-- Previous Button -->
            <% if (currentPage > 1) { %>
              <a href="/blogs?page=<%= currentPage - 1 %>" class="pagination-btn pagination-prev">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
                Previous
              </a>
            <% } else { %>
              <span class="pagination-btn pagination-prev pagination-disabled">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
                Previous
              </span>
            <% } %>

            <!-- Page Numbers -->
            <div class="pagination-numbers">
              <% 
                // Calculate page range to display
                let startPage = Math.max(1, currentPage - 2);
                let endPage = Math.min(totalPages, currentPage + 2);
                
                // Adjust if we're at the beginning or end
                if (currentPage <= 3) {
                  endPage = Math.min(5, totalPages);
                }
                if (currentPage > totalPages - 3) {
                  startPage = Math.max(1, totalPages - 4);
                }
              %>
              
              <!-- First page -->
              <% if (startPage > 1) { %>
                <a href="/blogs?page=1" class="pagination-number">1</a>
                <% if (startPage > 2) { %>
                  <span class="pagination-ellipsis">...</span>
                <% } %>
              <% } %>

              <!-- Page numbers -->
              <% for (let i = startPage; i <= endPage; i++) { %>
                <% if (i === currentPage) { %>
                  <span class="pagination-number pagination-active"><%= i %></span>
                <% } else { %>
                  <a href="/blogs?page=<%= i %>" class="pagination-number"><%= i %></a>
                <% } %>
              <% } %>

              <!-- Last page -->
              <% if (endPage < totalPages) { %>
                <% if (endPage < totalPages - 1) { %>
                  <span class="pagination-ellipsis">...</span>
                <% } %>
                <a href="/blogs?page=<%= totalPages %>" class="pagination-number"><%= totalPages %></a>
              <% } %>
            </div>

            <!-- Next Button -->
            <% if (currentPage < totalPages) { %>
              <a href="/blogs?page=<%= currentPage + 1 %>" class="pagination-btn pagination-next">
                Next
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </a>
            <% } else { %>
              <span class="pagination-btn pagination-next pagination-disabled">
                Next
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </span>
            <% } %>
          </div>

          <!-- Page Info -->
          <div class="pagination-info">
            Showing <%= (currentPage - 1) * 4 + 1 %> to <%= Math.min(currentPage * 4, totalBlogs) %> of <%= totalBlogs %> blogs
          </div>
        </div>
      <% } %>
