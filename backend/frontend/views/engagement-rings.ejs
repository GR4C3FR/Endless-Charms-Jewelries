</head>
<body>
    <!-- Navigation Header -->
  <header class="main-header">
    <div class="container">
      <nav class="navbar">
        <a href="/" class="logo">
          <img src="/images/navigation/logo.png" alt="Endless Charms Logo" class="logo-img">
        </a>
        <div class="nav-links">
          <a href="/" class="nav-link">HOME</a>
          <a href="/blogs" class="nav-link">BLOGS</a>
          <div class="nav-item">
            <span class="nav-link">SHOP</span>
            <div class="dropdown-menu">
              <a href="/engagement-rings">Engagement Rings</a>
              <a href="/wedding-bands">Wedding Bands</a>
              <a href="/accessories">Other Accessories</a>
            </div>
          </div>
          <a href="/contact" class="nav-link">CONTACT</a>
          <a href="/about" class="nav-link">ABOUT</a>
        </div>
        <div class="nav-icons">
          <button id="headerSearchBtn" class="icon-btn desktop-icon">
            <img src="/images/navigation/search-icon.png" alt="Search" class="search-icon">
          </button>
          <button class="icon-btn desktop-icon" onclick="handleProfileClick()">
            <img src="/images/navigation/profile-icon.png" alt="Profile" class="profile-icon">
          </button>
          <button class="icon-btn desktop-icon" onclick="handleBagClick()">
            <img src="/images/navigation/bag.png" alt="Shopping Bag" class="bag-icon">
            <span class="bag-badge" style="display: none;">0</span>
          </button>
          <button id="mobileMenuBtn" class="mobile-hamburger" aria-label="Toggle mobile menu" aria-expanded="false">
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
          </button>
        </div>
      </nav>
      <!-- Mobile Navigation Panel -->
      <div id="mobileMenuOverlay" class="mobile-menu-overlay"></div>
      <nav id="mobileMenu" class="mobile-menu">
        <div class="mobile-menu-header">
          <button id="mobileMenuClose" class="mobile-menu-close" aria-label="Close menu">
            <span class="close-icon">&times;</span>
          </button>
        </div>
        <div class="mobile-menu-links">
          <a href="/" class="mobile-nav-link">HOME</a>
          <a href="/blogs" class="mobile-nav-link">BLOGS</a>
          <a href="/engagement-rings" class="mobile-nav-link">ENGAGEMENT RINGS</a>
          <a href="/wedding-bands" class="mobile-nav-link">WEDDING BANDS</a>
          <a href="/accessories" class="mobile-nav-link">OTHER ACCESSORIES</a>
          <a href="/contact" class="mobile-nav-link">CONTACT</a>
          <a href="/about" class="mobile-nav-link">ABOUT</a>
        </div>
        <div class="mobile-menu-icons">
          <button id="mobileHeaderSearchBtn" class="icon-btn" aria-label="Search products">
            <img src="/images/navigation/search-icon.png" alt="Search" class="search-icon" loading="lazy">
          </button>
          <button class="icon-btn" onclick="handleProfileClick()" aria-label="User profile">
            <img src="/images/navigation/profile-icon.png" alt="Profile" class="profile-icon" loading="lazy">
          </button>
          <button class="icon-btn" onclick="handleBagClick()" aria-label="Shopping bag">
            <img src="/images/navigation/bag.png" alt="Shopping Bag" class="bag-icon" loading="lazy">
            <span class="bag-badge" style="display: none;">0</span>
          </button>
        </div>
      </nav>
    </header>

    <% if (user && user.isAdmin) { %>
      <a href="/admin" class="admin-fab" title="Blog Generator">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
          <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
        </svg>
      </a>
    <% } %>

    <!-- Search dropdown (hidden by default). Toggled by the header search button -->
   <div id="searchDropdown" class="search-dropdown">
      <div class="search-dropdown-inner container">
        <div class="search-bar-row">
        <input
            id="headerSearchInput"
            type="text"
            class="header-search-input"
            placeholder="Search products, e.g. 'moissanite'"
          />
          <button id="headerSearchClose" class="icon-btn">
          &times;
          </button>
        </div>
        <div div id="searchResults" class="search-results-grid">
          <!-- Placeholder for search results; items should use the same card layout as product tiles -->
          <!-- Sample placeholder (hidden) -->
          <div class="search-result-card" style="display:none;">
            <div class="weddingband-style-image">
              <img
                src="/images/shop-engagement-page/placeholder.png"
                alt="Sample"
                class="search-result-img"
              />
            </div>
            <p class="weddingband-style-label">Sample Product</p>
          </div>
        </div>
      </div>
    </div>

    <div class="main-parent-div">
        <!-- Hero Section (Row One) -->
        <section class="row-one">
            <div class="image-container">
                <img src="/images/shop-engagement-page/engagement-rings-hero.png" alt="Engagement Ring" class="hero-image" fetchpriority="high">
            </div>
            <div class="text-row-one">
                <p class="main-text">
                    Find the design that speaks to your love. <br>
                    Shop our collection and visit our social <br>
                    media pages for more styles.
                </p>
                <button class="cta-button outline" onclick="window.open('https://www.facebook.com/profile.php?id=100079908461494','_blank')">Visit Us.</button>
            </div>
        </section>

        <!-- Products Section (Row Two) -->
        <section class="row-two">
            <div class="inner-div-row-two">
                <h1>Engagement Rings</h1>
                <p>Find the perfect engagement ring made just for you. Choose your design, pick your stone, and <br>
                    customize it in 18k or 14k Yellow Gold, White Gold, or Rose Gold. Your choice of diamonds, your style, your moment.
                </p>
            </div>

            <div class="container">
                <div class="weddingband-styles-grid">
                    <% ringStyles.forEach((ring, idx) => { %>
                      <div class="weddingband-style-card add-to-bag-card"
                         data-id="ring-<%= idx %>"
                         data-name="<%= ring.name.replace(/\"/g, '&quot;') %>"
                         data-price="<%= ring.basePrice %>"
                         data-image="<%= ring.image %>"
                         data-page="engagement-rings"
                         data-pricing="<%= ring.pricing && ring.pricing.combinations ? encodeURIComponent(JSON.stringify(ring.pricing.combinations)) : '' %>"
                         data-available-options="<%= ring.availableOptions ? encodeURIComponent(JSON.stringify(ring.availableOptions)) : '' %>">
                        <div class="weddingband-style-image">
                          <img src="/images/<%= ring.image %>" alt="<%= ring.name %>">
                        </div>
                        <div class="weddingband-style-info">
                          <p class="weddingband-style-label"><%= ring.name %></p>
                          <div class="weddingband-style-footer">
                            <!-- card is clickable to open customization modal -->
                          </div>
                        </div>
                      </div>
                    <% }); %>
                </div>
            </div>
        </section>
    </div>

